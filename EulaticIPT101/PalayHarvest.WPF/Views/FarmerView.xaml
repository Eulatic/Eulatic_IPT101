<Window x:Class="PalayHarvest.WPF.Views.FarmerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Farmer Management"
        Height="450" Width="800"
        mc:Ignorable="d">

    <Grid Margin="20">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- FARMERS LIST -->
        <DataGrid Grid.Column="0"
                  ItemsSource="{Binding Farmers}"
                  SelectedItem="{Binding SelectedFarmer}"
                  AutoGenerateColumns="False"
                  Margin="0,0,20,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*"/>
                <DataGridTextColumn Header="Harvest Qty" Binding="{Binding HarvestQty}" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- FORM -->
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Add / Edit Farmer" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Name -->
            <TextBlock Text="Name"/>
            <TextBox Text="{Binding Name}" Margin="0,0,0,10"/>

            <!-- Location -->
            <TextBlock Text="Location"/>
            <TextBox Text="{Binding Location}" Margin="0,0,0,10"/>

            <!-- Harvest Quantity -->
            <TextBlock Text="Harvest Qty"/>
            <TextBox Text="{Binding HarvestQty}" Margin="0,0,0,10"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal">
                <Button Content="Load" Command="{Binding LoadFarmersCommand}" Width="70" Margin="5"/>
                <Button Content="Add" Command="{Binding AddFarmerCommand}" Width="70" Margin="5"/>
                <Button Content="Update" Command="{Binding UpdateFarmerCommand}" Width="70" Margin="5"/>
                <Button Content="Delete" Command="{Binding DeleteFarmerCommand}" Width="70" Margin="5"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
